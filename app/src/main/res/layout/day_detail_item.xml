<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/exercise_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="?attr/label_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Тяга под наклоном fepkjfp[ejkp[fjkp[eijf[pijepijfjep[ijfefpeijkfpeij" />

    <TextView
        android:id="@+id/approaches"
        style="@style/robotoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:textColor="?attr/label_primary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/exercise_name"
        app:layout_constraintStart_toStartOf="@+id/exercise_name"
        app:layout_constraintTop_toBottomOf="@id/exercise_name"
        tools:text="72x3" />

    <TextView
        android:id="@+id/add_approach"
        style="@style/robotoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:text="Добавить подход"
        android:textColor="?attr/label_primary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/approaches" />


</androidx.constraintlayout.widget.ConstraintLayout>